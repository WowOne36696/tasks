//Task5
function Fibonacci(iterations) {
	var summ = 0, a = 0, b = 1;
    for (var i = 0; i < iterations; i++) {
        summ = a + b;
		a = b;
		b = summ;
		alert((i+1) + ' итерация = ' + summ + ' /');
    }
}
Fibonacci(10);

//Task 6
function changeDirection(string) {
		 return string.split("").reverse().join("");
	}
	alert(changeDirection("string"));
  
